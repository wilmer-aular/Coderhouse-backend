html 
    head 
        title="Form-Pug"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")


    body(style="background-color: #f5f1f1")

    div(style="margin-top: 50px;")
        div(style="margin: 0px auto; width: 600px;")
            h2.text-primary="Ingrese los datos"
            form(action="/api/products" method="POST")
                div.mb-3
                div.mb-3
                label.form-label='Titulo'
                input(type="text", placeholder="Titulo" class="form-control" name="title" required)

                div.mb-3
                label.form-label='Precio'
                input(type="text", placeholder="precio" class="form-control" name="price" required)

                div.mb-3
                label.form-label='Thumbnail'
                input(type="text", placeholder="Url del producto" class="form-control" name="thumbnail")
                input(type="text", value="pug" class="form-control" name="page" hidden)
                
                button(type="submit" class="btn btn-primary" style="margin-top:10px")="Enviar"

        div(style="margin: 0px auto; width: 600px; margin-top:20px")
            h2.text-danger="Historial"
                if(products.length)
                    table(class="table table-dark table-striped")
                        thead
                            th(scope="col")
                                span.text-warning="ID"
                            th(scope="col")
                                span.text-warning="TITLE"
                            th(scope="col")
                                span.text-warning="PRICE"
                            th(scope="col")
                                span.text-warning="THUMBNAIL"
                        tbody
                            each product in products
                                tr
                                    th(scope="row")= product.id
                                    th(scope="row")= product.title
                                    th(scope="row")= product.price
                                    th(scope="row")     
                                        img(width="26px" src=product.thumbnail)
                else
                    div(role="alert" style="background-color: #ed9898; padding: 5px;  border-radius: 3px")
                        span.text-danger="No se encontraron datos"
